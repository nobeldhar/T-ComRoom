<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RegChooseFragment">

    <LinearLayout
        android:id="@+id/reg_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            android:outlineAmbientShadowColor="@android:color/black"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/teach_reg"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="#880e4f"
                android:textStyle="normal"
                android:textSize="22dp"
                android:textColor="@android:color/white"
                android:text="Teacher's Registration"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            app:cardElevation="10dp"
            android:outlineAmbientShadowColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/stu_reg"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textSize="22dp"
                android:background="#4a148c"
                android:textColor="@android:color/white"
                android:text="Student's Registration"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>